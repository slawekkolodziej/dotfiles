config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Push Bindings
bind l:ctrl;alt  push right bar-resize:screenSizeX/3
bind h:ctrl;alt  push left  bar-resize:screenSizeX*2/3
bind k:ctrl;alt  push up    bar-resize:screenSizeY/5*3
bind j:ctrl;alt  push down  bar-resize:screenSizeY/5*2
bind m:ctrl;alt  push up    bar-resize:screenSizeY/5*4
bind n:ctrl;alt  push down  bar-resize:screenSizeY/4

# Throw Bindings
bind ,:ctrl;alt       throw 0
bind .:ctrl;alt       throw 1
bind l:ctrl;alt;cmd   throw right resize
bind h:ctrl;alt;cmd   throw left  resize

# Focus Bindings
bind l:shift;ctrl      focus right
bind h:shift;ctrl      focus left
bind k:shift;ctrl      focus up
bind j:shift;ctrl      focus down
bind k:shift;ctrl;alt  focus behind
bind j:shift;ctrl;alt  focus behind

# Window Hints
bind esc:cmd hint
